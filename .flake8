# Flake8 configuration
[flake8]
max-line-length = 127
max-complexity = 10
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Error codes:
# E203: whitespace before ':'
# W503: line break before binary operator
per-file-ignores =
    __init__.py:F401
